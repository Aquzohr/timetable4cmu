<body style="color: white; font-family: 'Oxygen', sans-serif; background-color: #303030;">

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      
      <div id="navbar" class="navbar-collapse collapse">

        <ul class="nav navbar-nav navbar-left">
          <li>
            <a class="navbar-brand" href="/" data-turbolinks="false">
            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Timetable for CMU (BETA)</a>
          </li>

        </ul>

       <% if session[:sid] != nil %>
       <ul class="nav navbar-nav navbar-right">
        <li><a href="#">
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Welcome, <%= session[:sid] %></a></li>
        <li><a href="/logout" id="logout" data-turbolinks="false" ><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout</a></li>
      </ul>
      <% end %>

    </div>
  </div>
</nav>

<br><br><br>



<div class="page-wrap">
  <div class="container">
    <main><%= yield %></main>
  </div>    
</div>

<footer class="site-footer">
