<div class="table-responsive">
  <table class="table" id="table2image">
    <thead>
      <tr>

        <th colspan="2" class="text-center no-warp black">610510628 (2/61)</th>

        <% @times.each_with_index do |time, index| %>

          <% if time >= @range[:start_time] && time <= @range[:end_time]  %>
            <th colspan="2" class="text-center no-warp black" ><%= time %> - <%= @times[index+1] %></th>
          <% end %>

        <% end %>

      </tr>
    </thead>

    <tbody>

      <% @days.each do |day| %>

        <% check_day = 0 %>
        <% @course_days.each do |key, value| %>
          <% check_day +=1 if day.include?(key) %>
        <% end %>
        <% next if check_day==0 %>

        <tr>
         <td colspan="2" class="text-center"><%= day %></td>  

          <% @courses.each do |course| %>

            <% if day.include?(course[:day]) %>
              <td class="<%= @classes[course[:no]] %>"> <%= course[:name] %>  </td>
            <% end %>
            
          <% end %>

        </tr>

      <% end %>

    </tbody>
  </table>
</div>

